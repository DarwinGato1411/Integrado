<?xml version="1.0" encoding="UTF-8"?>
<window  id="wVacante"  position="center" closable="true"  
         apply="org.zkoss.bind.BindComposer" 
         viewModel="@id('vm') @init('com.ec.controlador.empresa.NuevoTest')"
         class="modalTest modalAll">
    
    <caption label="Test" style="font-weight:bold" class="titulo"/> 
    

    <div class="container_modal">

        <div class="bodyModal">
            <div class="container_row_input">
              
                <div class="wrapper_input_mod">
                    <span>Test: </span>
                    <div class="wrapper_input_text">
                        
                        <textbox  
                            maxlength="100"    
                            onChange="self.setValue(self.getValue().toUpperCase());"  
                            value="@bind(vm.entidad.testNombre)" 
                            class="input_text" 
                            rows="5"
                            
                        />
                    </div>
                </div>
                

            </div>
            
            <div style="display:flex;justify-content:flex-end;">
                <a class="btn_modal"  onClick="@command('guardar')">
                    Guardar
                </a>
            </div>
        </div>     
    </div>     
                  

</window>